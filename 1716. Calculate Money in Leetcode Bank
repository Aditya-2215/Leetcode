class Solution:
    def totalMoney(self, n: int) -> int:
        weeks=n//7
        days=n%7
        total=0
        for i in range(weeks):
            total+=28+7*i
        start=weeks+1
        for i in range(days):
            total+=start+i
        return total


optimized version:-O(1)

class Solution:
    def totalMoney(self, n: int) -> int:
        w=n//7
        r=n-7*w
        num=7*w*w+49*w+r*r+r*(2*w+1)
        return num//2
